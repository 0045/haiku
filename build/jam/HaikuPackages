# The packages we build. Each is defined in its own file in the packages/
# subdirectory.
local packages =
	Haiku
	HaikuCrossDevel
	HaikuDevel
	HaikuUserguide
	HaikuWelcome
	MakefileEngine
;

packages = $(packages:G=package-rules) ;
SEARCH on $(packages) = [ FDirName $(HAIKU_BUILD_RULES_DIR) packages ] ;

local package ;
for package in $(packages) {
	include $(package) ;
}
