SubDir HAIKU_TOP src system boot loader net ;

UsePrivateHeaders kernel [ FDirName kernel boot platform $(TARGET_BOOT_PLATFORM) ] ;

SubDirC++Flags -fno-rtti ;

local tcp = ;
if $(TARGET_ARCH) = ppc {
	tcp = TCP.cpp ;
}

KernelStaticLibrary boot_net :
	ARP.cpp
	ChainBuffer.cpp
	Ethernet.cpp
	IP.cpp
	NetDefs.cpp
	NetStack.cpp
	RemoteDisk.cpp
	UDP.cpp
	$(tcp)

	: -fno-pic
;
