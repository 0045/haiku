	arch_system_info.cpp
	arch_thread.cpp
	arch_timer.cpp
	arch_user_debugger.cpp
	arch_vm.cpp
	arch_vm_translation_map.cpp
	:
	$(TARGET_KERNEL_PIC_CCFLAGS)
;

CreateAsmStructOffsetsHeader asm_offsets.h : asm_offsets.cpp ;

