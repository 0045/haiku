	CLuceneDataBase.cpp
	FullTextAnalyser.cpp

	IndexServerAddOn.cpp
	:
	be translation $(HAIKU_CLUCENE_LIBS) $(TARGET_LIBSTDC++)
;

SEARCH on [ FGristFiles IndexServerAddOn.cpp ]
	+= [ FDirName $(SUBDIR) $(DOTDOT) ] ;
